<section class="px-8 lg:px-28 py-8">
  <div class="flex justify-center">
    <div class="relative text-3xl font-semibold px-4 py-2">
      <span class="absolute top-0 left-0 border-t-2 border-s-2 p-2 w-1 h-2 border-secondary"></span>
      <span class="absolute bottom-0 right-0 border-b-2 border-e-2 p-2 h-2 w-1 border-secondary"></span>
