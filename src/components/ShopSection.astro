<section>
	<div class="hover:-translate-y-2 transition-transform bg-white shadow-lg rounded-lg grid grid-cols-1 md:grid-cols-5 gap-2 p-4">
		<div class="product-preview col-span-3">
			<div class="glide__track" data-glide-el="track">
				<ul class=" glide__slides">
					<li class="glide__slide">
						<img class="max-h-[500px] w-full object-top object-cover" src="/img/hijab1.jpg" alt="">
					</li>
					<li class="glide__slide">
						<img class="max-h-[500px] w-full object-top object-cover" src="/img/hijab2.jpg" alt="">
